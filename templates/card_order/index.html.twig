{# templates/card_order/dashboard.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
  Tableau de bord
{% endblock %}

{% block body %}
  <style>
    /* CSS pour la page dashboard de gestion des cartes bancaires */
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f4f7fa;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    h1 {
      text-align: center;
      font-size: 2.5rem;
      color: #333;
      margin-top: 20px;
    }
    
    h2 {
      text-align: center;
      font-size: 1.8rem;
      color: #2c3e50;
      margin-top: 40px;
    }
    
    p {
      text-align: center;
      font-size: 1.2rem;
      color: #7f8c8d;
    }
    
    ul {
      list-style: none;
      padding: 0;
      margin-top: 30px;
      text-align: center;
    }
    
    ul li {
      display: inline-block;
      margin: 15px;
    }
    
    ul li a {
      display: block;
      background-color: #3498db;
      color: #fff;
      padding: 15px 30px;
      border-radius: 30px;
      text-decoration: none;
      font-size: 1.1rem;
      font-weight: bold;
      transition: background-color 0.3s ease, transform 0.3s ease;
    }
    
    ul li a:hover {
      background-color: #2980b9;
      transform: translateY(-5px);
    }
    
    ul li a:active {
      background-color: #21618c;
    }
    
    ul li a:focus {
      outline: none;
      box-shadow: 0 0 5px 2px rgba(52, 152, 219, 0.5);
    }
    
    .card-section {
      margin-top: 40px;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }
    
    .card-section div {
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
      padding: 20px;
      width: 80%;
      max-width: 600px;
    }
    
    .card-section div h3 {
      text-align: center;
      color: #2c3e50;
      font-size: 1.6rem;
      margin-bottom: 20px;
    }
    
    .card-section div p {
      font-size: 1rem;
      color: #7f8c8d;
      line-height: 1.6;
      text-align: center;
    }
    
    .card-section div .action-buttons {
      display: flex;
      justify-content: center;
      gap: 20px;
    }
    
    .card-section div .action-buttons a {
      background-color: #27ae60;
      padding: 10px 25px;
      border-radius: 25px;
      color: white;
      font-weight: bold;
      text-decoration: none;
      font-size: 1rem;
      transition: background-color 0.3s ease, transform 0.3s ease;
    }
    
    .card-section div .action-buttons a:hover {
      background-color: #2ecc71;
      transform: translateY(-5px);
    }
    
    .card-section div .action-buttons a:focus {
      outline: none;
      box-shadow: 0 0 5px 2px rgba(39, 174, 96, 0.5);
    }
  </style>

  <h1>Tableau de bord</h1>

  <p>Bienvenue, {{ app.user.nom|upper }} {{ app.user.prenom|capitalize }} !</p>

  <h2>Gestion des cartes bancaires</h2>
  <ul>
    <li>
      <a href="{{ path('order_card') }}">Commander une nouvelle carte</a>
    </li>
    <li>
      <a href="{{ path('track_card_order') }}">Suivre ma demande de carte</a>
    </li>
    <li>
      <a href="{{ path('app_view_card') }}">Voir ma carte bancaire</a>
    </li>
  </ul>
{% endblock %}
